{
  "FunctionName": "auralis-api",
  "Runtime": "python3.11",
  "Role": "arn:aws:iam::ACCOUNT_ID:role/auralis-lambda-role",
  "Handler": "lambda_handler.handler",
  "Timeout": 30,
  "MemorySize": 1024,
  "EphemeralStorage": {
    "Size": 512
  },
  "Environment": {
    "Variables": {
      "AWS_REGION": "us-east-1",
      "ENABLE_AI_ANALYSIS": "true",
      "AI_ANALYSIS_REQUIRED": "false",
      "BEDROCK_MODEL_ID": "anthropic.claude-3-sonnet-20240229-v1:0",
      "BEDROCK_TIMEOUT": "25",
      "LOG_LEVEL": "INFO",
      "LOG_FORMAT": "json",
      "RATE_LIMIT_PER_MINUTE": "60",
      "RATE_LIMIT_BURST": "10",
      "ALLOWED_ORIGINS": "https://your-amplify-url.amplifyapp.com"
    }
  },
  "VpcConfig": {
    "SubnetIds": [],
    "SecurityGroupIds": []
  },
  "Tags": {
    "Project": "Auralis",
    "Environment": "production",
    "ManagedBy": "terraform"
  }
}
